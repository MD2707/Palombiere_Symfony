{% extends 'base.html.twig' %}

{% block title %}Création compte{% endblock %}

{% block body %}
    <style>
        .valid{
            margin:2rem 0;
        }

    </style>

    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal td-fade-in">Créez votre compte</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username,{
                    label: 'Pseudonyme'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}

                {{ form_row(registrationForm.captcha) }}
                    
                <button type="submit" class="btn valid td-fade-in">Valider</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
